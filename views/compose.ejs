<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input type="text" class="form-control" id="composeTitle" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="composeDescription">Post</label>
        <textarea type="text" class="form-control" id="composeDescription" rows="5" soles="30" name="postBody" autocomplete="off"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>


